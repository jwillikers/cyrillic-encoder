root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[{*.adoc,*.cmake,CMakeLists.txt}]
indent_size = unset

[*.{adoc,envrc,nu,yaml,yml}]
max_line_length = off

[{justfile,.justfile,*.just,*.cpp,*.h.in,*.hpp}]
indent_size = 4
